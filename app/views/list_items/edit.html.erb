<h1>Editing list_item</h1>

<% form_for(@list_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :list %><br />
    <%= f.text_field :list %>
  </p>
  <p>
    <%= f.label :product %><br />
    <%= f.text_field :product %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :quantity_bought %><br />
    <%= f.text_field :quantity_bought %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @list_item %> |
<%= link_to 'Back', list_items_path %>
