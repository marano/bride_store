<% form_for(testimonial) do |f| %>
  <%= f.error_messages %>

  <p>
    <b><%= f.label :body, 'Texto' %></b><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <b><%= f.label :home_text, 'Texto Home' %></b><br />
    <%= f.text_area :home_text %>
  </p>
  <br/>
  <p>
    <b><%= f.label :active, 'Ativo' %></b>
    <%= f.check_box :active %>
  </p>
  <br/>
  <p>
    <b><%= f.label :featured, 'Destaque' %></b>
    <%= f.check_box :featured %>
  </p>
  <p>
    <b><%= f.label :author, 'Autor' %></b><br/>
    <%= f.text_field :author %>
  </p>
  <br/>
  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>
