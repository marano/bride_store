<% content_for :head do %><%= javascript_include_tag :defaults %><% end  %>

<% unless current_list.nil? and current_list != @list %>
  <% migalha "minha conta / #{@list.name.downcase} / visualizar" %>
<% end %>

<%= render :partial => 'layouts/list_menu_panel' %>

<h1><%= @list.title %></h1>

<% if @list.photo.file? %>
  <%= image_tag @list.photo.url %>
  <br/>
  <br/>  
<% end %>

<% unless @list.galery.galery_photos.empty? %>
  <ul class='listaHorizontal'>
    <% for p in @list.galery.galery_photos %>
      <li><%= image_tag p.url :thumb %></li> 
    <% end %>
  </ul>
  <br/>  
<% end %>

<p><%= @list.text %></p>

<h2>Mensagens</h2>
<hr/>
<div id='messages'>
  <%= render :partial => @list.messages %>
</div>
<br/>
<% remote_form_for Message.new do |f| %>
  <%= hidden_field_tag 'message[list_id]', @list.id %>
  <%= f.text_area :body, :rows => 3 %><br/>
  <%= f.submit 'Enviar' %>
<% end %>
