<h1>Editar Usuário</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p><%= label_tag 'name', 'Nome' %><br/>
  <%= f.text_field :name %></p>

  <p><%= label_tag 'login', 'Usuário' %><br/>
  <%= label_tag @user.login %></p>

  <p><%= label_tag 'email', 'Email' %><br/>
  <%= label_tag @user.email %></p>

  <p><%= label_tag 'password', 'Senha' %><br/>
  <%= f.password_field :password %></p>

  <p><%= label_tag 'password_confirmation', 'Confirmar senha' %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
