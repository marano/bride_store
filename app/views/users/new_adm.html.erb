<h1>Criar Usuário</h1>
<% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for :user, :url => { :controller => 'users', :action => 'create_admin' } do |f| -%>

  <p><%= label_tag 'name', 'Nome' %><br/>
  <%= f.text_field :name %></p>

  <p><%= label_tag 'login', 'Usuário' %><br/>
  <%= f.text_field :login %></p>

  <p><%= label_tag 'email', 'Email' %><br/>
  <%= f.text_field :email %></p>

  <p><%= label_tag 'password', 'Senha' %><br/>
  <%= f.password_field :password %></p>

  <p><%= label_tag 'password_confirmation', 'Confirmar senha' %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= submit_tag 'Criar' %></p>
<% end -%>
