<% content_for :head do %>
  <%= javascript_include_tag :fckeditor %>
<% end %>

<% form_for @product do |f| %>
  <%= f.error_messages %>

  <p>
    <b><%= f.label :name, 'Nome' %></b><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b><%= f.label :category_id, 'Categoria' %></b><br />
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </p>
  <p>
    <b><%= f.label :description, 'Descrição' %></b><br />
    <%= fckeditor_textarea(:product, :description, :toolbarSet => 'Basic', :width => '60%', :height => '300px') %>
  </p>
  <p>
    <b><%= f.label :code, 'Código' %></b><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <b><%= f.label :price, 'Preço' %></b><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <b><%= f.label :featured, 'Destaque' %></b><br />
    <%= f.check_box :featured %>
  </p>
  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>
