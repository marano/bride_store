<div id="message_<%= message.id %>" class="mensagensPerfil">
  <span class="dataDepoimento"><%= time_ago_in_words message.created_at %> atrÃ¡s</span>
  <h3>
    <% if message.user.nil? %>
      <%= message.user_name %>
    <% else %>
      <%= message.user.name %>      
    <% end %>    
  </h3>
  <p><%= message.body %></p>  
  <% if logged_in? and (message.list.user == current_user or message.user == current_user) %>
