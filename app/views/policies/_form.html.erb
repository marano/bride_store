<% form_for(@policy) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, 'Nome' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :menu_title, 'Título do menu' %><br />
    <%= f.text_field :menu_title %>
  </p>
  <p>
    <%= f.label :text_title, 'Título do texto' %><br />
    <%= f.text_field :text_title %>
  </p>
  <p>
    <%= f.label :text, 'Texto' %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Salvar" %>
  </p>
<% end %>
