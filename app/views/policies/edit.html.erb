<h1>Editing policy</h1>

<% form_for(@policy) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :menu_title %><br />
    <%= f.text_field :menu_title %>
  </p>
  <p>
    <%= f.label :text_title %><br />
    <%= f.text_field :text_title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @policy %> |
<%= link_to 'Back', policies_path %>
