<h1>Listing policies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Menu title</th>
    <th>Text title</th>
    <th>Text</th>
  </tr>

<% for policy in @policies %>
  <tr>
    <td><%=h policy.name %></td>
    <td><%=h policy.menu_title %></td>
    <td><%=h policy.text_title %></td>
    <td><%=h policy.text %></td>
    <td><%= link_to 'Show', policy %></td>
    <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
    <td><%= link_to 'Destroy', policy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

