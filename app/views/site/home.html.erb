<% content_for(:content_class) { %>home<% } %>

<% featured_product = Product.random_featured %>

<% unless featured_product.nil? or !featured_product.display.file? %>
  <% content_for(:display) { %>
    <div id="display">    
      <%= image_tag featured_product.display.url %>
    </div>
  <% } %>
<% end %>

<% content_for(:miolo) { %>
  <%= render :partial => 'site/featured_product', :object => featured_product %>
<% } %>

<div id="primaryContent">
  <h1><%= site.home_title %></h1>
  <p><%= site.home_text %></p>
  <%= link_to '<span></span>CRIAR MINHA LISTA DE PRESENTES AGORA >', account_path %>
</div>
<hr>
<div id="boxHome">
  <div id="visitarLista" class="boxContentHome">
    <%= render :partial => 'lists/find' %>
  </div>
  <% unless logged_in? %>
    <script language="JavaScript">
      document.getElementById("boxHome").style.background = "url(/images/bgContentBoxHome.gif) repeat-y -15px 0";
    </script>
    <div id="loginHome">
      <%= render :partial => 'sessions/form' %>
    </div>
  <% end %>
</div>
